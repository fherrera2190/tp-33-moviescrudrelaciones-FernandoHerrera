<!DOCTYPE html>
<html lang="en">
<%-include('./partials/head.ejs',{title:movie.title}) %>

<body>
  <%-include('./partials/header.ejs') %>
  <div class="row border border-1 rounded-3 p-3 d-flex  justify-content-between ">
    <div class="col-3 d-flex justify-content-center align-items-center border   " style="height: 200px; width: 200px;">
      <img class="img-fluid " src="/img/peliculas/<%=movie.image?movie.image:"logo-DH.png"%>" alt="">
    </div>
    <section class="col-9">
      <h1><%= movie.title %> </h1>
      <hr>
      <p class="mt-3"><b>RATING:</b> <%= movie.rating %> </p>
      <p><b>AWARDS:</b> <%= movie.awards %> </p>
      <p><b>LENGTH:</b> <%= movie.length + ' min'%> </p>
      <p><b>RELEASE DATE:</b> <%= movie.release_date %> </p>
      <p><b>ACTORS:</b></p>
      <ul>
        <% movie.actors.forEach(actor => { %>
        <li><%=actor.dataValues.first_name +" "+actor.dataValues.last_name %></li>
        <% }) %>
      </ul>
    </section>
    <!--Aquí debe colocar los botones de Modificar - Borrar y Listado de Películas-->
    <div class="d-flex  justify-content-end gap-4  ">
      <a class="btn btn-info text-white " href="/movies">Lista de peliculas</a>
      <button type="button" class="btn btn-danger  " data-bs-toggle="modal" data-bs-target="#exampleModal">
        Delete
      </button>
      <a class="btn btn-warning text-white  " href="/movies/edit/<%=movie.id %>"> <i class="bi bi-pencil-square"></i>Edit</a>
    </div>
  </div>
  <%- include('./partials//modalDelete.ejs',{movie}) %>
  <%-include('./partials/scripts.ejs') %>
</body>

</html>