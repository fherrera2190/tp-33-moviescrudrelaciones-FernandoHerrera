<!DOCTYPE html>
<html>
<%- include('./partials/head.ejs') %>

<body>
  <%- include('./partials/header.ejs') %>
  <h1><%= title %></h1>
  <p>Bienvenidos a <%= title %></p>
  <hr>
  <div class="d-flex justify-content-between align-items-center  ">
    <div class="d-flex  gap-5">
      <p><a href="/movies">Listado de Pel√≠culas</a></p>
      <p><a href="/genres">Generos</a></p>
    </div>
    <div>
      <form action="/movies/search" method="get" class="d-flex" role="search">
        <input class="form-control me-2" name="keyword" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
  <hr>
  <% if (locals.error) { %>
    <div class="container">
      <div class="alert alert-warning" role="alert">
        <%= locals.error %>
      </div>
    </div>
  <% }else{ %>
  <div class="container">
    <div class="d-flex justify-content-start  gap-3  flex-wrap ">
      <% for( let i = 0; i < movies.length; i++ ) { %>
      <%-include('./partials/movieCard.ejs',{url:"/movies/detail/"+movies[i].id, title:movies[i].title, image:movies[i].image}) %>
      <% } %>
    </div>
  </div>
  <% }%>

  <%- include('./partials/scripts.ejs') %>
</body>

</html>